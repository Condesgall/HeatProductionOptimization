<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HeatingGridAvaloniApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="550"
        x:Class="HeatingGridAvaloniApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="HeatingGridAvaloniApp">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel>
        <Border Margin="5" 
        CornerRadius="10"
        Background="Red">
        <TextBlock Margin="5"
            FontSize="24" 
            HorizontalAlignment="Center"
            Text="Danfoss Heating App">
        </TextBlock>
        </Border>
        <StackPanel>
            <Grid ShowGridLines="False" Margin="5"
                    ColumnDefinitions="120, 200" 
                    RowDefinitions="Auto, Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Margin="10">UserName</Label>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="0 5" Name="userName"/>
                <Label Grid.Row="1" Grid.Column="0" Margin="10">Password</Label>
                <TextBox Grid.Row="1"  Grid.Column="1" Margin="0 5" Name="password"/>
                <Button Grid.Row="2" Grid.Column="1" Margin="0 5" Click="ButtonClicked">Login</Button>
            </Grid>
        </StackPanel>
    </StackPanel>
    
</Window>
