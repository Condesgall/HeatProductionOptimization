<UserControl x:Class="HeatingGridAvaloniApp.Views.HeatDemandChartView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:vm="clr-namespace:HeatingGridAvaloniApp.ViewModels"
             x:DataType="vm:HeatDemandChartViewModel"> <!-- Specify the data type -->
    <UserControl.DataContext>
        <vm:HeatDemandChartViewModel />
    </UserControl.DataContext>
    <Grid>
        <lvc:CartesianChart Series="{Binding Series}" />
    </Grid>
</UserControl>
