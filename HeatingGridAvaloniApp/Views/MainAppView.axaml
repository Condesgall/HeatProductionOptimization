<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HeatingGridAvaloniApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HeatingGridAvaloniApp.Views.MainAppView"
             x:DataType="vm:MainAppViewModel">
  <Grid>
    <StackPanel Name="ButtonPanel" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Spacing="10">
      <Button Click="RedirectToAM">AM</Button>
      <Button Click="RedirectToOptimizer">OPTIMIZER</Button>
    </StackPanel>
    <ContentControl Name="OpenedTab" Grid.Row="2"/>
  </Grid>

</UserControl>
