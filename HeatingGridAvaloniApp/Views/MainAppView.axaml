<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HeatingGridAvaloniApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HeatingGridAvaloniApp.Views.MainAppView"
             x:DataType="vm:MainAppViewModel">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="25"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Name="ButtonPanel" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="10">
      <Button 
        Width="400"
        Height="50"
        HorizontalContentAlignment="Center"
        VerticalAlignment="Center"
        FontSize="18"
        Click="RedirectToAM">Production Units
        </Button>
      <Button 
        Width="400"
        Height="50"
        HorizontalContentAlignment="Center"
        VerticalAlignment="Center"
        FontSize="18"
        Click="RedirectToOptimizer">Optimizer
        </Button>
    </StackPanel>
    <ContentControl Name="OpenedTab" Grid.Row="2"/>
  </Grid>

</UserControl>
